<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.DashboardActivity">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="-62dp"
            android:background="@color/transparent"
            android:fitsSystemWindows="true">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/navDashContainer"
                android:name="com.allvoicetranslator.language.translator.ui.fragment.NavigationDashboardFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_navigation_drawer" />
        </com.google.android.material.navigation.NavigationView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/view_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:name="com.allvoicetranslator.language.translator.ui.text.TextFragment"
                android:layout="@layout/fragment_text"
                />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNav"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:elevation="4dp"
                android:layout_marginTop="4dp"
                app:backgroundTint="@color/white"
                app:labelVisibilityMode="labeled"
                android:outlineAmbientShadowColor="@color/primary"
                android:outlineSpotShadowColor="@color/primary"
                app:menu="@menu/bottom_menu"
                app:itemIconTint="@color/bottom_selector_color"
                app:itemTextColor="@color/bottom_selector_color"
                />
            <LinearLayout
                android:id="@+id/adsView0"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>